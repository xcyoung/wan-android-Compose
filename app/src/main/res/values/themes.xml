<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wanandroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffffffff</item>
        <item name="colorPrimaryVariant">#FFcccccc</item>
        <item name="colorOnPrimary">#FF000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF6b38fb</item>
        <item name="colorSecondaryVariant">#FF2100c7</item>
        <item name="colorOnSecondary">#FFFFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Wanandroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Wanandroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Wanandroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>